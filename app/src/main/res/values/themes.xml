<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/github_black</item>
        <item name="colorPrimaryVariant">@color/github_black</item>
        <item name="colorOnPrimary">@color/github_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/github_link</item>
        <item name="colorSecondaryVariant">@color/github_link</item>
        <item name="colorOnSecondary">@color/github_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GithubUser.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/github_black</item>
        <item name="colorPrimaryVariant">@color/github_black</item>
        <item name="colorOnPrimary">@color/github_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/github_link</item>
        <item name="colorSecondaryVariant">@color/github_link</item>
        <item name="colorOnSecondary">@color/github_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.GithubUser.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>
</resources>